rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /news/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
                   && (request.auth.uid == "YOUR_ADMIN_UID_1"
                       || request.auth.uid == "YOUR_ADMIN_UID_2");
    }
    match /customers/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

